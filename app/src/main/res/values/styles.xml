<resources>
    <style name="AppTheme.Start" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <!--<item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="ThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ThemeNight" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--AlertDialog-->
    <style name="AlertNightBlue" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/nb_accent</item>
        <item name="android:background">@color/nb_foreground</item>
        <item name="android:selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AlertNightBlack" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/foreground</item>
        <item name="android:selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AlertNightRed" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/nr_accent</item>
        <item name="android:background">@color/nr_foreground</item>
        <item name="android:selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>
</resources>